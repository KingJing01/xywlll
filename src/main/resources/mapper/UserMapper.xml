<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xinya.coldchain.sys.dao.SysDao">

    <resultMap type="com.xinya.coldchain.sys.model.User" id="User">
        <id property="pk_user" column="pk_user"/>
        <result property="user_name" column="user_name"/>
        <result property="user_code" column="user_code"/>
        <result property="user_type" column="user_type"/>
    </resultMap>

    <select id="getUserInfoByParam" resultMap="User">
        select pk_user,user_name,user_code,user_type from nw_user where dr=0 and user_code=#{0}
         and user_password=#{1}
    </select>


</mapper>
